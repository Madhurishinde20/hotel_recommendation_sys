<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Admin Dashboard</title>
   <style>
  body {
  margin: 0;
  padding: 0;
  font-family:Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif;
  background-image: url("image/back.jpg");
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center;
  background-attachment: fixed;
  height: 100vh;
  overflow: hidden;
}

/* Top Navigation */
.navigation {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15px 30px;
  background: linear-gradient(to right,#654ea3, #eaafc8); /* Updated gradient */
  color: #222;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
}

.navigation h3 {
  margin: 0;
  font-size: 35px;
  font-weight: bold;
  margin-left: 550px;
}

/* Profile Dropdown */
.profile-container {
  position: relative;
  cursor: pointer;
}

.profile-icon {
  color: #333;
  margin-left: auto;
  padding:10px;
  
}
.profile-menu {
  display: none;
  position: absolute;
  right: 0;
  top: 35px;
  background-color: #fff;
  color: #333;
  border-radius: 8px;
  border: 1px solid #ddd;
  box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
  padding: 15px;
  width: 220px;
  z-index: 10;
}

.profile-menu p {
  margin: 6px 0;
  font-size: 14px;
}

.profile-menu a {
  text-decoration: none;
  color: #009688;
  display: block;
  margin-top: 10px;
  font-weight: bold;
}

/* Dashboard Layout */
.dashboard-container {
  display: flex;
  flex-wrap: nowrap;
  height: calc(100vh - 70px); /* fit below navbar */
  overflow: hidden;
}

/* Sidebar */
.sidebar {
  width: 220px;
  background: rgba(0, 0, 0, 0.4); /* Darker transparent background */
  padding-top: 20px;
  color: #fff;
  border-right: 1px solid #ccc;
  position: sticky;
  top: 0;
  box-shadow: 2px 0 6px rgba(0, 0, 0, 0.1);
  height: 100%;
}

.sidebar-menu {
  list-style: none;
  padding: 0;
  margin: 0;
}

.sidebar-menu li {
  padding: 14px 20px;
  font-size: 16px;
  border-bottom: 1px solid #555;
  display: flex;
  align-items: center;
  transition: background 0.3s ease;
}

.sidebar-menu li i {
  margin-right: 10px;
  color:white;
}

.sidebar-menu li a {
  color: white;
  text-decoration: none;
}

.sidebar-menu li:hover {
  background-color: #00796b;
}

.sidebar-menu li:hover a {
  color: #ffffff;
  font-weight: bold;
}

/* Main Body */
.main-body {
  flex: 1;
  padding: 40px;
  color: #222;
  background: rgba(255, 255, 255, 0.8);
  height: 100%;
  overflow: auto;
  box-shadow: inset 0 0 10px rgba(0, 0, 0, 0.05);
}

.main-body h1 {
  font-size:30px;
  margin-bottom: 20px;
  color: purple;
}

.main-body::-webkit-scrollbar {
  width: 0px;
  background: transparent;
}
.iframe-wrapper {
  flex-grow: 1;
  width: 100%;
  height: 100%;
  position: relative;
  border-radius: 10px;
  overflow: hidden;
}

.iframe-wrapper iframe {
  width: 100%;
  height: 100%;
  border: none;
  display: block;
}


/*       MEDIA QUERIES         */
/* ========= MEDIA QUERIES ========== */
@media screen and (max-width: 991px) {
  .dashboard-container {
    flex-direction: column;
    height: auto;
  }

  .sidebar {
    width: 100%;
    position: relative;
    border-right: none;
    border-bottom: 1px solid #ccc;
  }

  .sidebar-menu li {
    justify-content: center;
    padding: 10px;
    font-size: 14px;
  }

  .main-body {
    padding: 30px 20px;
    height: auto;
  }

  .navigation {
    flex-direction: column;
    align-items: flex-start;
  }

  .navigation h3 {
    font-size: 20px;
  }

  .profile-container {
    margin-top: 10px;
  }

  .profile-icon {
    font-size: 30px;
  }

  .main-body h1 {
    font-size: 24px;
  }
}

@media screen and (max-width: 600px) {
  .sidebar-menu li {
    padding: 8px;
    font-size: 13px;
  }

  .profile-icon {
    font-size: 24px;
  }

  .main-body h1 {
    font-size: 20px;
  }
}


</style>

  <!-- Font Awesome & Fonts -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"/>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@500;700&display=swap" rel="stylesheet"/>
  <link rel="stylesheet" href="style.css">
</head>
<body>

  <!-- Top Navigation Bar -->
  <nav class="navigation">
    <div class="navbar-left">
      <h3>Admin Panel</h3>
    </div>
    <div class="navbar-right">
      <div class="profile-container" onclick="toggleProfileMenu()">
        <i class="fa fa-user-circle-o profile-icon" style="font-size:40px;"></i>
        <div class="profile-menu" id="profileMenu">
          <p><strong>Name:</strong>Madhuri</p>
          <p><strong>Email:</strong> admin@gmail.com</p>
          <p><strong>Role:</strong> Admin</p>
          <a href="/logout">Logout</a>
        </div>
      </div>
    </div>
  </nav>

  <!-- Page Layout -->
  <div class="dashboard-container">
    
    <!-- Sidebar -->
    <aside class="sidebar">
      <ul class="sidebar-menu">
        
  <li><i class="fa fa-hotel"></i><a class="nav-link active" onclick="loadPage('/hotelDash', this)">Hotels</a></li>
  <li><i class="fa fa-suitcase"></i><a class="nav-link active" onclick="loadPage('/hotelImgDash', this)">Hotel Images</a></li>
	<li><i class="fa fa-building"></i><a class="nav-link active" onclick="loadPage('/cityDash', this)">City</a></li>
	<li><i class="fa fa-map-marker"></i><a class="nav-link active" onclick="loadPage('/areaDash', this)">Area</a></li>
	<li><i class="fa fa-users"></i><a class="nav-link active" onclick="loadPage('viewcustomer', this)">Customer</a></li>
	<li><i class="fa fa-star"></i><a class="nav-link active" onclick="loadPage('', this)">Rating & Reviews</a></li>
	<li><i class="fa fa-sign-out"></i><a class="nav-link active" onclick="loadPage('', this)">Logout</a></li>
      </ul>

    </aside>
  <main class="main-body">
<div class="iframe-wrapper">
      <iframe id="contentFrame" src="" scrolling="no"></iframe>
    </div>
</main>

  </div>

  <!-- JavaScript for Profile Dropdown -->
  <script>
    function toggleProfileMenu() {
      const menu = document.getElementById("profileMenu");
      menu.style.display = menu.style.display === "block" ? "none" : "block";
    }

    // Hide menu on outside click
    document.addEventListener("click", function(event) {
      const profileContainer = document.querySelector(".profile-container");
      const profileMenu = document.getElementById("profileMenu");
      if (!profileContainer.contains(event.target)) {
        profileMenu.style.display = "none";
      }
    });


	function loadPage(page, clickedLink) {
      		document.getElementById('contentFrame').src = page;

      // Handle active class
      document.querySelectorAll('.nav-link').forEach(link => {
        link.classList.remove('active');
      });
      clickedLink.classList.add('active');
    }

  </script>
</body>
</html>